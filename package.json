{
  "name": "kati",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "scripts": {
    "prepare": "lefthook install",
    "check": "turbo run check",
    "check:lint": "turbo run check:lint",
    "check:type": "turbo run check:type",
    "check:fmt": "turbo run check:fmt",
    "fix:lint": "turbo run fix:lint",
    "fix:fmt": "turbo run fix:fmt",
    "crawl": "dotenv -e .env.local -- pnpm --filter @kati/crawler start",
    "website": "pnpm --filter @kati/website dev",
    "workflows": "pnpm --filter @kati/workflows dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "dotenv-cli": "^8.0.0",
    "@commitlint/config-conventional": "^20.4.1",
    "lefthook": "^2.0.16",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "turbo": "^2.8.1",
    "typescript": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
